@model Crud_Carros.Models.Entities.Client
@{
    ViewData["Title"] = "Editar Cliente";
}

<h1>Editar Cliente</h1>

@if (Model is null)
{
    <p>Não tem nenhuma staff com este ID</p>
}
else
{
    <form method="post">

        <div class="mt-3">
            <label class="form-label">Id:</label>
            <input type="text" class="form-control" asp-for="Id_Client" readonly />
        </div>


        <div class="mt-3">
            <label class="form-label">Nome e Sobrenome:</label>
            <input type="text" class="form-control" asp-for="Name_Client" />
        </div>


        <div class="mt-3">
            <label class="form-label">Estado:</label>
            <input type="text" class="form-control" asp-for="State" placeholder="Ex: Não é possivel alterar" readonly />
        </div>


        <div class="mt-3">
            <label class="form-label">ddd:</label>
            <input type="number" class="form-control" asp-for="ddd" readonly />
        </div>


        <div class="mt-3">
            <label class="form-label">Tel:</label>
            <input type="text" class="form-control" asp-for="contact" placeholder="Ex: 978315555" maxlength="9" id="inputTel" />
        </div>


        <div class="mt-3">
            <label class="form-label">CPF:</label>
            <input type="text" class="form-control" asp-for="CPF" placeholder="Ex: 13356497855" maxlength="11" id="inputCpf" />
        </div>


        <div class="mt-3">

            <button type="submit" class="btn btn-outline-success"> Salvar </button>

            <button type="submit" class="btn btn-danger ms-3" asp-controller="Client" asp-action="Delete"> Delete </button>

        </div>
    </form>
}

@section Scripts {

    <script>
        $(document).ready(function () {
            $("#inputTel").keyup(function () {
                $("#inputTel").val(this.value.match(/[0-9]*/));
            });
        });

        $(document).ready(function () {
            $("#inputCpf").keyup(function () {
                $("#inputCpf").val(this.value.match(/[0-9]*/));
            });
        });
    </script >
}