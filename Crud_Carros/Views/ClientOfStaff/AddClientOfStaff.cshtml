@model Crud_Carros.Models.AddClientOfStaffViewModel
@{
    ViewData["Title"] = "Cliente + Staff";
}

@{
    List<Crud_Carros.Models.Entities.Staff> ListStaff = ViewBag.StaffList;
    List<Crud_Carros.Models.Entities.Client> ListClient= ViewBag.ClientList;
}


<h1>Cadastrar Cliente + Staff</h1>


<form method="post">

    <div class="mb-2">
        <p> Escolha a staff: </p>

        <select class="form-check" type="check-box" asp-for="StaffId" name="@Html.NameFor(m => m.StaffId)">

            @* <option selected>Selecione a Montadora:</option> *@

            @foreach (var x in ListStaff)
            {
                <option value="@x.Id_Staff" data-value="@x.Id_Staff"> @x.Name_Staff </option>
            }

        </select>
    </div>

    <div class="mb-2">
        <p> Escolha o cliente: </p>

        <select class="form-check" type="check-box" asp-for="ClientId" name="@Html.NameFor(m => m.ClientId)">

            @* <option selected>Selecione a Montadora:</option> *@

            @foreach (var x in ListClient)
            {
                <option value="@x.Id_Client" data-value="@x.Id_Client"> @x.Name_Client</option>
            }

        </select>
    </div>


    <div class="mt-3">
        <button type="submit" class="btn btn-outline-success"> Salvar </button>
    </div>

</form>

